.index-wrap {
  background: #fff;
}
.index-wrap .newsList-box {
  padding-top: 24rpx;
}
.index-wrap .newsList-box .cap .cap-item {
  font-size: 26rpx;
  font-weight: 400;
  color: #CCCCCC;
  position: relative;
}
.index-wrap .newsList-box .cap .cap-item.curr {
  font-size: 30rpx;
  color: #000c98;
  font-weight: bold;
}
.index-wrap .newsList-box .cap .cap-item:first-of-type {
  padding-right: 24rpx;
}
.index-wrap .newsList-box .cap .cap-item:first-of-type::after {
  position: absolute;
  content: '';
  width: 1px;
  height: 30rpx;
  background: #a2a2a2;
  right: 0%;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.index-wrap .newsList-box .cap .cap-item:nth-of-type(2) {
  padding-left: 24rpx;
}
.index-wrap .newsList-box .news-list {
  padding-top: 24rpx;
}
.index-wrap .newsList-box .news-list .news-item {
  width: 100%;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #8f8f8f;
  margin-bottom: 24rpx;
}
.index-wrap .newsList-box .news-list .news-item .news-box {
  width: 100%;
  height: 150rpx;
  border-radius: 8rpx;
  background: #001a8c;
  overflow: hidden;
}
.index-wrap .newsList-box .news-list .news-item .news-cover {
  height: 100%;
  width: 30%;
}
.index-wrap .newsList-box .news-list .news-item .time-title {
  padding: 24rpx;
  height: 100%;
  box-sizing: border-box;
  flex: 1 0 0;
  min-width: 0;
}
.index-wrap .newsList-box .news-list .news-item .time-title .time-box {
  width: 24%;
  height: 100%;
  position: relative;
}
.index-wrap .newsList-box .news-list .news-item .time-title .time-box text {
  font-size: 46rpx;
  font-weight: bold;
  color: #fff;
  position: absolute;
  display: block;
}
.index-wrap .newsList-box .news-list .news-item .time-title .time-box text.month {
  top: 0;
  left: 0;
}
.index-wrap .newsList-box .news-list .news-item .time-title .time-box text.day {
  bottom: 0;
  right: 0;
}
.index-wrap .newsList-box .news-list .news-item .time-title .time-box::after {
  position: absolute;
  content: '';
  width: 1px;
  height: 100rpx;
  background: #fff;
  -webkit-transform: rotate(50deg);
          transform: rotate(50deg);
  left: 50%;
  top: 0;
}
.index-wrap .newsList-box .news-list .news-item .time-title .title-box {
  padding-left: 24rpx;
  flex: 1 0 0;
  min-width: 0;
}
.index-wrap .newsList-box .news-list .news-item .time-title .title-box view {
  text-align: center;
  color: #fff;
}
.index-wrap .newsList-box .news-list .news-item .time-title .title-box view.title1 {
  font-size: 46rpx;
  margin-bottom: 10rpx;
}
.index-wrap .newsList-box .news-list .news-item .time-title .title-box view.title2 {
  font-size: 22rpx;
}

