.wrap {
  height: 100%;
  box-sizing: border-box;
}
.wrap .top-nav {
  display: flex;
}
.wrap .top-nav .nav-tab {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}
.wrap .top-nav .nav-tab.curr {
  color: #001A8C;
  font-weight: bold;
  font-size: 32rpx;
}
.wrap .top-nav .nav-tab:first-child {
  border-right: 2rpx solid #666;
  padding-right: 40rpx;
}
.wrap .top-nav .nav-tab:last-child {
  padding-left: 40rpx;
}
.wrap .content, .wrap .content-info {
  height: calc(100vh - 100rpx);
  padding: 16rpx;
  width: 100%;
  border-radius: 16rpx;
  background-color: #001A8C;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #fff;
}
.wrap .content .top-title, .wrap .content-info .top-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.wrap .content .top-title .img, .wrap .content-info .top-title .img {
  margin-right: 16rpx;
  width: 240rpx;
  height: 240rpx;
}
.wrap .content .top-title .img image, .wrap .content-info .top-title .img image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  border: 2rpx solid #fff;
  box-sizing: border-box;
}
.wrap .content .top-title .name-sec, .wrap .content-info .top-title .name-sec {
  width: 466rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-sizing: border-box;
}
.wrap .content .top-title .name-sec .belong, .wrap .content-info .top-title .name-sec .belong {
  margin-bottom: 16rpx;
  padding: 0 16rpx;
  line-height: 64rpx;
  border: 2rpx solid #fff;
  border-radius: 16rpx;
}
.wrap .content .top-title .name-sec .work-info, .wrap .content-info .top-title .name-sec .work-info {
  margin-top: 16rpx;
  font-weight: 200;
  font-size: 28rpx;
}
.wrap .content .top-title .name-sec .work-name-sec, .wrap .content-info .top-title .name-sec .work-name-sec {
  height: 160rpx;
  padding: 16rpx;
  border: 2rpx solid #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.wrap .content .vote-sec, .wrap .content-info .vote-sec {
  height: 90rpx;
  padding: 20rpx 0;
  background-color: #5DA9D8;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.wrap .content .vote-sec .item, .wrap .content-info .vote-sec .item {
  width: 25%;
  height: 40rpx;
  text-align: center;
  border-right: 2rpx solid #fff;
}
.wrap .content .vote-sec .item:last-child, .wrap .content-info .vote-sec .item:last-child {
  border: none;
}
.wrap .content-info {
  height: calc(100vh - 200rpx);
  padding: 0;
}
.wrap .content-info .leaderboard {
  height: 90rpx;
  font-size: 32rpx;
  line-height: 90rpx;
  font-weight: bold;
  background-color: #5DA9D8;
  text-align: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.wrap .content-info .leaderboard-data .top-sec {
  height: 90rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  box-sizing: border-box;
}
.wrap .content-info .leaderboard-data .top-sec .item {
  width: 25%;
  line-height: 80rpx;
  text-align: center;
}
.wrap .btn {
  width: 50%;
  font-weight: bold;
  margin: 32rpx auto;
  background-color: #001A8C;
}
.wrap .mini-btn {
  border-radius: 30rpx;
  background-color: #001A8C;
  margin-bottom: 16rpx;
}
.wrap .work-list {
  display: flex;
  flex-wrap: wrap;
}
.wrap .work-list .item {
  width: 30%;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.wrap .work-list .item .work-image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.wrap .work-list .item .title {
  line-height: 60rpx;
  text-align: center;
  background-color: #001A8C;
  color: #fff;
  font-size: 28rpx;
}
.wrap .work-list .item .btn-sec {
  display: flex;
  font-size: 28rpx;
  line-height: 60rpx;
}
.wrap .work-list .item .btn-sec .vote {
  width: 50%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  background-color: #FFBA55;
}
.wrap .work-list .item .btn-sec .view {
  width: 50%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  background-color: #6AB26B;
}

