/*每个页面公共css */
.top-banner {
  width: 100%;
  height: 288rpx;
}
.top-search {
  margin-top: 34rpx;
}
.top-search .search-bar {
  width: 88%;
  height: 80rpx;
  background-color: #fff;
  border: 1px solid #a2a2a2;
  border-radius: 45rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
}
.top-search .search-bar input {
  width: 100%;
  height: 100%;
  padding-left: 38rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
  background-position: left center;
}
.top-search .notice {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: #000c98;
  margin-left: 20rpx;
  color: #fff;
}
.top-search .notice text {
  font-size: 24rpx;
}
.banner-text {
  margin-top: 34rpx;
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 10rpx;
  background: #000c98;
  background: linear-gradient(90deg, #000c53 0%, #001a8c 30%, #001a8c 70%, #000c53 100%);
  font-weight: bold;
  font-size: 32rpx;
}
/*弹性盒子布局*/
.flex-wrap {
  display: flex;
}
.flex-con {
  flex: 1;
  min-width: 0;
  min-height: 0;
}
.flex-hh {
  -o-flex-wrap: wrap;
  flex-wrap: wrap;
}
.flex-vertical {
  flex-flow: column;
}
.j-center {
  justify-content: center;
}
.j-between {
  justify-content: space-between;
}
.j-around {
  justify-content: space-around;
}
.j-end {
  justify-content: flex-end;
}
.a-center {
  align-items: center;
}
.a-start {
  align-items: flex-start;
}
.a-between {
  align-content: space-between;
}
.a-around {
  align-content: space-around;
}
/* 多行省略 */
.w-elli {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.w-elli-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pd-32 {
  padding: 0 32rpx;
}
.iphonx {
  box-sizing: content-box !important;
  padding-bottom: 18px !important;
}

